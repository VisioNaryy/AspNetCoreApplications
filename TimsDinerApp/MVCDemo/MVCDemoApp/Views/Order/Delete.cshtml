@model DataLibrary.Models.Order

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (Model is null)
{
    <h4>Requested model was not found.</h4>
}
else
{
    <div class="h4">
        Are you sure you want to delete the order you placed on @Model.OrderDate ?
    </div>
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
}